---
import kyngLogo from '../assets/kyng.svg';

const town = import.meta.env.SECRET_TOWN;
const phone = import.meta.env.SECRET_PHONE;
const email = import.meta.env.PUBLIC_EMAIL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="stylesheet" href="https://use.typekit.net/dzd6qih.css" />
    <link rel="stylesheet" href="/vars.css" />
    <link rel="stylesheet" href="/reset.css" />
    <meta property="og:image" content="https://www.kyng.be/opengraph.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:description"
      content="Here to help you build your kingdom."
    />
    <title>Christophe Leroy - Resume</title>
  </head>
  <body>
    <div id="container">
      <h1>Christophe Leroy</h1>
      <h3 id="personal_info">
        {town} | {email}
      </h3>
      <div id="content">
        <slot />
      </div>
      <img id="logo" src={kyngLogo.src} alt="" fetchpriority="high" />
    </div>
  </body>
</html>

<style lang="scss" is:global>
  html {
    font-size: 18px;
  }

  html,
  body {
    width: 100%;
    height: 100%;
    background: var(--gold);
    padding: 1rem;
  }

  #container {
    font-family: futura-pt, Futura, sans-serif;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  #logo {
    width: 100px;
    margin-bottom: 2rem;
  }

  h1 {
    font-weight: 800;
    font-style: normal;
    text-transform: uppercase;
    color: var(--darkblue);
    letter-spacing: 0rem;
    font-size: 3rem;
    line-height: 2.1rem;

    & + h3 {
      margin-top: 0;
    }
  }

  h2 {
    font-weight: 500;
    font-size: 1.5rem;
    color: var(--darkblue);
    margin-top: 1rem;
  }

  p,
  h3 {
    font-weight: 400;
    font-style: normal;
    font-size: 1rem;
  }

  h3,
  b,
  strong {
    font-weight: 500;
  }

  h3 {
    margin-top: 0.5rem;
  }

  ul {
    padding-inline-start: 1.5rem;
  }

  a {
    color: var(--darkblue);
    transition: all linear 0.2s;
    font-weight: 500;

    &:hover {
      color: var(--blue);
    }
  }

  @media print {
    html,
    body {
      width: 100%;
      height: 100%;
      background: white;
      padding: 1rem;
      font-size: 14px;
    }

    #logo {
      display: none;
    }
  }
</style>
