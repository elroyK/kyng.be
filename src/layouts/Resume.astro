---
import Skills from '../components/Skills.astro';
import kyngLogo from '../assets/kyng.svg';

const town = import.meta.env.SECRET_TOWN;
const phone = import.meta.env.SECRET_PHONE;
const email = import.meta.env.PUBLIC_EMAIL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="stylesheet" href="https://use.typekit.net/dzd6qih.css" />
    <link rel="stylesheet" href="/vars.css" />
    <link rel="stylesheet" href="/reset.css" />
    <script
      src="https://kit.fontawesome.com/541bb82d97.js"
      crossorigin="anonymous"></script>
    <meta property="og:image" content="https://www.kyng.be/opengraph.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:description"
      content="Here to help you build your kingdom."
    />
    <title>Christophe Leroy - Resume</title>
  </head>
  <body>
    <div id="container">
      <h1>Christophe Leroy</h1>
      <div id="content">
        <div id="left-side">
          <h3>{town}</h3>
          <h3>{email}</h3>
          <h3>{phone}</h3>
          <br />
          <h3 class="social">
            <i class="fa-brands fa-github-alt"></i>
            <a href="/github" target="_blank" rel="noopener noreferrer"
              >github.com/elroyK</a
            >
          </h3>
          <h3 class="social">
            <i class="fa-brands fa-linkedin-in"></i>
            <a href="/linkedin" target="_blank" rel="noopener noreferrer"
              >/in/kyngstudio</a
            >
          </h3>
          <br />
          <Skills />
        </div>
        <div id="right-side">
          <slot />
        </div>
      </div>
      <img id="logo" src={kyngLogo.src} alt="" fetchpriority="high" />
      <p id="see-resume-online">
        See this resume online at <a
          href="/resume"
          target="_blank"
          rel="noopener noreferrer">kyng.be/resume</a
        >
      </p>
    </div>
  </body>
</html>

<style lang="scss" is:global>
  html {
    font-size: 18px;
  }

  html,
  body {
    width: 100%;
    height: 100%;
    background: var(--gold);
    padding: 1rem;
  }

  #container {
    font-family: futura-pt, Futura, sans-serif;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  #content {
    display: grid;
    grid-template: auto / 1fr auto;
    gap: 3rem;
  }

  #left-side {
    h3 {
      margin-bottom: 0;
    }
  }

  .social {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.3rem;
  }

  #logo {
    width: 100px;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  h1 {
    font-weight: 800;
    font-style: normal;
    text-transform: uppercase;
    color: var(--darkblue);
    letter-spacing: 0rem;
    font-size: 3rem;
    line-height: 2.1rem;
    margin-bottom: 2rem;

    & + h3 {
      margin-top: 0;
    }
  }

  h2 {
    font-weight: 500;
    font-size: 1.5rem;
    color: var(--darkblue);
    margin-top: 1rem;
  }

  p,
  h3 {
    font-weight: 400;
    font-style: normal;
    font-size: 1rem;
  }

  h3,
  b,
  strong {
    font-weight: 500;
  }

  h3 {
    margin-top: 0.5rem;
  }

  ul {
    padding-inline-start: 1.5rem;
  }

  a {
    color: var(--darkblue);
    transition: all linear 0.2s;
    font-weight: 500;

    &:hover {
      color: var(--blue);
    }
  }

  #see-resume-online {
    display: none;
  }

  @media print {
    html,
    body {
      width: 100%;
      height: 100%;
      background: white;
      padding: 1rem;
      font-size: 14px;
    }

    #container {
      min-height: 100%;
    }

    #content {
      flex-grow: 1;
    }

    #logo {
      margin-bottom: 0;
    }

    #see-resume-online {
      display: block;
    }
  }
</style>
